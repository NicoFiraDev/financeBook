<div class="ui container">
  <h2 class="ui center aligned icon header teal">
    <i class="circular users icon"></i>
    Forgot your password?
  </h2>
  <div class="ui grid centered">
    <div class="eight wide column">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'ui form', method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'ui teal button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>