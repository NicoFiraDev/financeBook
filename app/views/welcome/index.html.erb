<div class="ui container">
  <div class="ui grid mt-lg">

    <div class="ten wide column">
      <div id="stock-lookup">
        <%= form_tag search_stocks_path, method: :get, id: "stock-lookup-form" do %>
          <div class="ui fluid action input">
            <%= text_field_tag :stock, params[:stock], placeholder: 'Search...', autofocus: true %> 
            <%= button_tag 'Search', class: 'ui teal button' %>
          </div>
        <% end %>
      </div>
      
    </div>

    <div class="six wide column">
      Sidebar
    </div>

  </div>
</div>

