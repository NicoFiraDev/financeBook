<table class="ui teal striped table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Primary Exchange</th>
      <th>Sector</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.primary_exchange %></td>
        <td><%= user_stock.sector %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to stock_path(user_stock.ticker) do %>
              <i class="arrow circle large right icon"></i>
            <% end %>
            <%= link_to user_stock_path(user_stock.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="trash alternate large red icon"></i>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>