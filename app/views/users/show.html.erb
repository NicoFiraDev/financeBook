<div class="ui container">
  <h2 class="ui center aligned icon header">
    <i class="circular user icon"></i>
    <div class="center aligned">
      <%= @user.full_name %>
      <br>
      <%= @user.email %>
    </div>
  </h2>
  <div class="ui grid mt-lg">

    <% if @user_stocks.size > 0 %>
      <%= render 'stocks/list'%>
    <% else %>
      <p class="container">This user is not tracking any stocks</p>
    <% end %>

    <%= link_to 'Back', friends_path, class: 'ui teal button' %>
  </div>
</div>
