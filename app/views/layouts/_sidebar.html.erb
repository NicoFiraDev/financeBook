<div class="ui menu">
  <table class="ui teal table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Symbol</th>
        <% if @user.id == current_user.id %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @user_stocks.each do |user_stock| %>
        <tr>
          <td><%= user_stock.name %></td>
          <td><%= user_stock.ticker %></td>
          <% if @user.id == current_user.id %>
            <td>
              <%= link_to stock_path(user_stock.ticker) do %>
                <i class="arrow circle right icon"></i>
              <% end %>
              <%= link_to user_stock_path(user_stock.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
                <i class="trash alternate red icon"></i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>